{
  "permissions": [
    "activeTab",
    "scripting"
    ],
  "manifest_version": 3,
  "name": "HN Inline",
  "version": "0.0.1",
  "description": "Add HN comments inline",
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://news.ycombinator.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
